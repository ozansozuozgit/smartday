generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id             String    @id @default(cuid())
  name           String
  percentage     Float
  goalId         String
  goal           Goal      @relation(fields: [goalId], references: [id])
  categoryId     String?
  category       Category? @relation(fields: [categoryId], references: [id])
  alignsWithGoal Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime? @updatedAt
}

model Category {
  id         String     @id @default(cuid())
  name       String
  activities Activity[]
  userId     String
  createdAt  DateTime?  @default(now())
}

model Goal {
  id         String     @id @default(cuid())
  name       String
  percentage Float?
  createdAt  DateTime   @default(now())
  userId     String
  activities Activity[]
  updatedAt  DateTime?  @updatedAt
  deletedAt  DateTime?

  CompletedGoal CompletedGoal[]
  AiMessage     AiMessage[]
}

model CompletedGoal {
  id          String   @id @default(cuid())
  goalId      String
  goal        Goal     @relation(fields: [goalId], references: [id])
  completedAt DateTime @default(now())
  userId      String
  name        String?  @default("")
}

model AiMessage {
  id        String   @id @default(cuid())
  message   String
  goalId    String
  goal      Goal     @relation(fields: [goalId], references: [id])
  createdAt DateTime @default(now())
}
